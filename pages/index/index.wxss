@import "../../template/release_items_template.wxss";
@import "../../template/wrapper.wxss";
@import "../../template/movable_view.wxss";

.top_color_block{
  width: 100%;
  height: 340rpx;
  background-size: 120rpx;
  background-color: #2d3449;
  position: absolute;
  border-bottom-left-radius: 70% 10%;
  border-bottom-right-radius: 70% 10%;
}

.userAvatar{
  border-radius: 60rpx;
  width: 95rpx;
  height: 95rpx;
  overflow: hidden;
}

.userImg{
  height: 100%;
  width: 100%;
}

.top_welcome_text{
  color: white;
  font-size: 40rpx;
  font-weight: bold;
  margin-left: 50rpx;
  margin-top: 13rpx;
  display: flex;
  flex-direction: row;
}

.welcome_font{
  padding: 22rpx;
}

.top_text{
  color: grey;
  margin-block-start: 30rpx;
  margin-inline-start: 45rpx;
  
}

.top_bar_container{
  background-color: white;
  height: 180rpx;
  display: flex;
  flex-direction: row;
  border-color: white;
  border-radius: 48rpx;
  border-style: solid;
  margin-top: 220rpx;
  z-index: 2;
  box-shadow: 0rpx 6rpx 8rpx grey;
}

.top_bar_item{
  margin-top: 40rpx;
  text-align: center;
  height:150rpx;
  width: 150rpx;
}

.top_bar_img{
  height: 70rpx;
  width: 75rpx;
  z-index: 3;
}

.top_bar_btn::after{
  border: none;
  border-color: transparent;

}

.top_bar_btn{
  height: 80rpx;
  background-color: white;
}

.top_bar_icon{
  width: 150rpx;
  font-size: small;
}

.swiper_container{
  width:93%;
  margin-top: 65rpx;
  border-radius: 20rpx;
}

.swipers{
  width: 100%; 
  height: 80px; 
  background: white; 
  display: flex; 
  align-items: center;
}

.scrollImg{
  width: 100%; 
  height: 100%; 
  border-radius: 20rpx;
}

.dots {
  width: 128rpx;
  height: 36rpx;
  display: flex;
  flex-direction: row;
  position: absolute;
  top: 540rpx;
}

.dot {
  width: 15rpx;
  height: 15rpx;
  border-radius: 50%;
  margin-right: 26rpx;
  background-color: white;
}

.active {
  width: 15rpx;
  height: 15rpx;
  background-color: #2d3449;
}

.background_block1{
  width: 100%;
  height: 30rpx;
  background-color: #f1f1f1;
}

.hot_msg{
  display: flex;
  background-color: #f1f1f1;
  height: 115rpx;
  width: 97%;
}

.hot_title{
  color: #2d3449;
  background-color: white;
  height: 90rpx;
  border-color: white;
  border-radius: 20rpx;
  border-style: solid;
  margin-top: 5rpx;
  z-index: 2;
  box-shadow: 0rpx 0rpx 8rpx grey;
  width: 25%;

  text-align: center;
  justify-content: center;
  display: flex;
  flex-direction: column;

}

.hot_release{
  background-size: 100% auto; 
  background-repeat: no-repeat; 
  background-color: white;
  height: 115rpx;
  border-color: white;
  border-radius: 20rpx;
  border-style: solid;
  margin-top: 5rpx;
  z-index: 2;
  box-shadow: 0rpx 0rpx 8rpx grey;
  width: 100%;
  color: transparent;

}

.background_block2{
  width: 100%;
  height: 20rpx;
  background-color: #f1f1f1;
}

.float_container{
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 96rpx;
  margin-bottom: 40rpx;
  background-color: transparent;
}

.float_tag_latest{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  margin-top: 30rpx;
  background-color: rgba(0, 0, 0, 0.05);
}

.float_item{
  width: 400rpx;
  height: 100%;
  text-align: center;
}

.float_line0,.float_line1{
  margin-top: 30rpx;
  width: 10%;
  height: 6rpx;
  background-color: #2d3449;
  margin-left: 170rpx;
}

.latest_release_items{
  width: 95%;
  display: flex;
  flex-direction: column;
  border-color: white;
  border-radius: 20rpx;
  border-style: solid;
  box-shadow: 0rpx 0rpx 8rpx grey;
  margin-bottom: 16rpx;
  z-index: 3;
}

.detail_btn{
  position: absolute;
  right: 0;
  height: 465rpx;
  width: 70rpx;
  color: transparent;
  margin-right: 19rpx;
  border-radius: 20rpx;
}

.detail_btn::after{
  border: none;
  border-color: transparent;
  z-index: 1;
}

.white{
  background-color: white;
}

.grey{
  background-color: grey;
}

.movable_img{
  width: 65%;
  height: 65%;
  margin-left: 20rpx;

}

.app_instruction{
    width: 140rpx;
    height: 45rpx;
    font-size: 55%;
    letter-spacing: 1rpx;
    margin-top: 35rpx;
    margin-left: 100rpx;
    border-bottom-left-radius: 30rpx;
    border-top-left-radius: 30rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    color: #e0e0da;
}